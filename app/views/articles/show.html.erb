<div class="container">
  <h1><%= @article.title %></h1>
  <hr>
  <%= link_to 'Edit Article', edit_article_path(@article)  %>
  <%= link_to "Delete Article", article_path(@article),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <div class="row">
    <p><%= @article.content %></p>
  </div>
  <%= link_to 'Back to all Articles', articles_path %>
</div>
